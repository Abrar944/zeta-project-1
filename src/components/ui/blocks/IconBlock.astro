---
const { heading, paragraph } = Astro.props;

interface Props {
  heading?: string;
  paragraph?: string;
}
---

<div class="flex gap-x-5">
  <slot />
  <div class="grow">
    <h3
      class="text-balanced text-lg font-semibold text-gray-800 dark:text-neutral-200"
    >
      {heading}
    </h3>
    <p class="mt-1 text-pretty text-neutral-700 dark:text-neutral-300">
      {paragraph}
    </p>
  </div>
</div>
